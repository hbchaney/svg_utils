

#class for handling the coordinate 

class Coordinate: 
    
    def __init__(self,_x,_y) : 
        self._x = _x 
        self._y = _y 
        
    def x(self): 
        return self._x 
    
    def y(self): 
        return self._y
    
    def handle_float_error(self) : 
        self._x = round(self._x, 3) 
        self._y = round(self._y, 3) 